{
    "markdownlint.ignore": [
        "../cursor_.md",
        "../README.md"
    ],
    "files.exclude": {
        "../cursor_.md": true,
        "../README.md": true
    },
    "search.exclude": {
        "../cursor_.md": true,
        "../README.md": true
    },
    "markdownlint.config": {
        "MD022": false,
        "MD032": false,
        "MD036": false,
        "MD010": false,
        "MD029": false,
        "MD033": false,
        "MD001": false,
        "MD031": false,
        "MD040": false,
        "MD009": false,
        "MD034": false,
        "MD025": false
    },
    // ===== SHELL INTEGRATION - улучшенная интеграция терминала =====
    // Включает визуальные индикаторы завершения команд (галочка ✓ для успешных, ✗ для неудачных)
    "terminal.integrated.shellIntegration.enabled": true,
    // Показывать декорации команд (визуальные индикаторы завершения)
    "terminal.integrated.shellIntegration.decorationsEnabled": "both",
    // Автоматически определять рабочую директорию
    "terminal.integrated.shellIntegration.showWelcome": false,
    // Навигация по командам (Ctrl+Up/Down для перехода между командами)
    "terminal.integrated.commandNavigationStyle": "navigateWithShellIntegration",
    // PowerShell настройки для улучшенной интеграции
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    // Таймаут для определения завершения команды (в миллисекундах)
    "terminal.integrated.shellIntegration.suggestEnabled": true,
    // Автодополнение в терминале (Preview функция)
    "terminal.integrated.suggest.enabled": true,
    // Показывать статус-бар с подсказками при автодополнении
    "terminal.integrated.suggest.showStatusBar": true,
    // Автоматически вставлять предложение при нажатии Tab
    "terminal.integrated.suggest.selectionMode": "always",
    // Выполнять команду сразу после вставки автодополнения (опционально)
    "terminal.integrated.suggest.runOnEnter": false,
    // Команды, которые пропускают shell (выполняются напрямую VS Code)
    "terminal.integrated.commandsToSkipShell": [
        "workbench.action.terminal.clear",
        "workbench.action.terminal.new"
    ],
    // Таймаут для операций терминала (помогает избежать зависаний)
    "terminal.integrated.localEchoExcludePrograms": [
        "vim",
        "vi",
        "nano",
        "tmux"
    ],
    // Быстрое исправление проблем (Quick fixes) - показывает кнопки исправления ошибок
    "terminal.integrated.shellIntegration.showExitConfirmation": false,
    // Не показывать подтверждение при закрытии терминала с активным процессом
    "terminal.integrated.confirmOnExit": false,
    // Улучшенное определение завершения команд на Windows (ConPTY)
    "terminal.integrated.windowsEnableConpty": true,
    // Автоматическое определение директории для новых терминалов
    "terminal.integrated.cwd": "${workspaceFolder}",
    // ===== TERMINAL BASICS - базовые функции =====
    // Автоматическое определение ссылок в выводе терминала (файлы, URL, номера строк)
    "terminal.integrated.enableMultiLinePasteWarning": true,
    // Автоматически определять файлы и строки в выводе команд (например, ошибки компилятора)
    "terminal.integrated.enableFileLinks": true,
    // Открывать файлы по клику на ссылку в терминале
    "terminal.integrated.enablePersistentSessions": true,
    // Сохранять историю терминала между сессиями
    // ===== TERMINAL APPEARANCE - внешний вид =====
    // Размер шрифта терминала
    "terminal.integrated.fontSize": 14,
    // Высота строки терминала (в пикселях)
    "terminal.integrated.lineHeight": 1.2,
    // Показывать иконки в терминале (для лучшей читаемости)
    "terminal.integrated.showExitAlert": false,
    // Не показывать предупреждение при выходе
    // ===== TERMINAL ADVANCED - продвинутые настройки =====
    // Таймаут для определения завершения команды (в миллисекундах) - помогает избежать зависаний
    "terminal.integrated.persistentSessionReviveProcess": "never",
    // Не восстанавливать процессы при перезапуске VS Code (избегаем зависаний старых процессов)
    // Локальное эхо для быстрого отображения ввода (помогает избежать задержек)
    "terminal.integrated.localEchoLatencyThreshold": 30,
    // Порог задержки для включения локального эха (мс) - если команда медленная, показываем ввод сразу
    "terminal.integrated.localEchoEnabled": "auto",
    // Автоматически включать локальное эхо для медленных команд
    // Определение ссылок в терминале (файлы, URL, git коммиты)
    "terminal.integrated.wordSeparators": " ()[]{}'\"`─。、",
    // Разделители слов для выделения ссылок в терминале
    // Буферизация вывода (помогает при большом объеме вывода)
    "terminal.integrated.scrollback": 10000,
    // Количество строк в истории терминала
    // Автоматический скролл к новому выводу
    "terminal.integrated.smoothScrolling": true,
    // Плавная прокрутка терминала
    // ===== TERMINAL PROFILES - профили терминалов =====
    // Настройка профилей для разных сценариев
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "args": ["-NoLogo"]
        },
        "Command Prompt": {
            "path": [
                "${env:windir}\\System32\\cmd.exe"
            ],
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "path": [
                "${env:ProgramFiles}\\Git\\bin\\bash.exe"
            ],
            "icon": "terminal-bash"
        }
    },
    // ===== ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ДЛЯ ОПРЕДЕЛЕНИЯ ЗАВЕРШЕНИЯ КОМАНД =====
    // Улучшенное определение завершения команд для PowerShell
    "terminal.integrated.shellIntegration.history": 1000,
    // Количество команд в истории Shell Integration
    "terminal.integrated.shellIntegration.showDecorations": true,
    // Показывать декорации команд всегда
    // Таймаут для ожидания завершения команды (в миллисекундах)
    "terminal.integrated.shellIntegration.decorationIcon": true,
    // Показывать иконки декораций
    // Автоматическое определение приглашения командной строки PowerShell
    "terminal.integrated.automationProfile.windows": {
        "path": "powershell.exe",
        "args": [
            "-NoLogo",
            "-Command"
        ]
    },
    // ===== КОДИРОВКА - для правильного отображения русского текста =====
    "files.encoding": "utf8",
    "git.terminalEncoding": "utf8",
    "terminal.integrated.encoding": "utf8",
    "files.autoGuessEncoding": true
}